generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Artist {
  id          String   @id @default(cuid())
  name        String
  description String
  imageUrl    String
  country     String
  debutYear   String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  genre       Genre    @relation(fields: [genreId], references: [id])
  genreId     String
  songs       Song[]
}

model Genre {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  artists     Artist[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Song {
  id          String   @id @default(cuid())
  title       String
  duration    String
  videoId     String?
  artist      Artist   @relation(fields: [artistId], references: [id])
  artistId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}